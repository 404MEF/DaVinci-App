<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--Main Themes-->
  <style name="DavinciTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primaryColor</item>
    <item name="colorPrimaryDark">@color/primaryDarkColor</item>
  </style>

  <style name="DavinciTheme.Splash" parent ="DavinciTheme">
    <item name="android:windowBackground">@drawable/SplashDrawable</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="DavinciTheme.Login" parent="Theme.AppCompat.NoActionBar">
    <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
  </style>

  <style name="DavinciTheme.Feed" parent="DavinciTheme">
  </style>

  <style name="DavinciTheme.Settings" parent="DavinciTheme">
  </style>

  <style name="DavinciTheme.Dialog" parent="Theme.AppCompat">
    
  </style>

  <!--Account Activity-->
  <style name="AccountActivity_Space">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/AccountActivity_Space</item>
  </style>

  <style name="AccountActivity_Title">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/AccountActivity_Title_Text</item>
    <item name="android:gravity">center</item>
    <item name="fontPath">fonts/KalamBold.ttf</item>
  </style>

  <style name="AccountActivity_Description">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">@dimen/AccountActivity_Description_Margin</item>
    <item name="android:layout_marginRight">@dimen/AccountActivity_Description_Margin</item>
    <item name="android:textSize">@dimen/AccountActivity_Description_Text</item>
    <item name="android:gravity">center</item>
    <item name="fontPath">fonts/KalamBold.ttf</item>
  </style>

  <style name="AccountActivity_Input">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">44dp</item>
    <item name="android:layout_marginLeft">@dimen/AccountActivity_Input_Margin</item>
    <item name="android:layout_marginRight">@dimen/AccountActivity_Input_Margin</item>
    <item name="android:background">@drawable/Login_RoundedTextField</item>
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">12dp</item>
    <item name="android:textSize">@dimen/AccountActivity_Input_Text</item>
    <item name="android:gravity">center</item>
    <item name="android:singleLine">true</item>
    <item name="android:maxLength">40</item>
    <item name="fontPath">fonts/KalamRegular.ttf</item>
  </style>

  <style name="AccountActivity_Button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">44dp</item>
    <item name="android:layout_marginLeft">@dimen/AccountActivity_Button_Margin</item>
    <item name="android:layout_marginRight">@dimen/AccountActivity_Button_Margin</item>
    <item name="android:background">@drawable/login_rippleloginbutton</item>
    <item name="android:paddingLeft">12dp</item>
    <item name="android:paddingRight">12dp</item>
    <item name="android:textSize">@dimen/AccountActivity_Button_Text</item>
    <item name="android:gravity">center</item>
    <item name="android:textAllCaps">false</item>
    <item name="fontPath">fonts/KalamRegular.ttf</item>
  </style>

  <style name="AccountActivity_CheckBox">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">@dimen/AccountActivity_Button_Margin</item>
    <item name="android:layout_marginRight">@dimen/AccountActivity_Button_Margin</item>
    <item name="android:textSize">12dp</item>

  </style>

  <!--Feed Activity-->

  <!--Settings Activity-->
  <style name="SettingsActivity_CategoryLabel">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">4dp</item>
    <item name="android:layout_marginTop">24dp</item>
    <item name="android:textSize">14dp</item>
    <item name="android:textColor">@color/Black</item>
    <item name="android:textStyle">italic</item>
  </style>

  <style name="SettingsActivity_CategoryDivider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:layout_marginBottom">16dp</item>
    <item name="android:background">@color/Black</item>
  </style>

  <style name="SettingsActivity_SubLabel">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">4dp</item>
    <item name="android:layout_marginBottom">8dp</item>
    <item name="android:textSize">12dp</item>
    <item name="android:textColor">@color/Black</item>
  </style>

  <style name="SettingsActivity_SettingButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:minHeight">42dp</item>
    <item name="android:layout_marginLeft">4dp</item>
    <item name="android:textSize">12dp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/Black</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:drawableRight">@drawable/ic_chevron_right_black_24dp</item>
  </style>

  <style name="SettingsActivity_SettingDivider">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">1dp</item>
    <item name="android:layout_marginTop">1dp</item>
    <item name="android:layout_marginBottom">1dp</item>
    <item name="android:layout_marginLeft">4dp</item>
    <item name="android:background">#1f000000</item>
  </style>

</resources>
